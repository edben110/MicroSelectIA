# API Settings
API_PORT=8000
API_HOST=0.0.0.0
API_DEBUG=False
API_TITLE="MicroSelectIA - AI Candidate Matching Service"
API_VERSION="1.0.0"

# AI Model Configuration
AI_MODEL=sentence-transformers/all-MiniLM-L6-v2
AI_DEVICE=cpu
AI_MAX_LENGTH=512

# Matching Weights (suma debe ser 1.0)
SKILLS_WEIGHT=0.40
EXPERIENCE_WEIGHT=0.25
SEMANTIC_WEIGHT=0.25
EDUCATION_WEIGHT=0.10

# Matching Thresholds
MIN_MATCH_SCORE=0.30
GOOD_MATCH_SCORE=0.60
EXCELLENT_MATCH_SCORE=0.80

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173,https://clipers.sufactura.store,https://backend.sufactura.store

# Cache Settings
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
